<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#227733">

    <TextView android:id="@+id/table_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="text"
        android:text="table_text_1t"/>

    <TextView android:id="@+id/table_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:inputType="text"
        android:text="table_text_2"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:text="Switch to Hand view" />

    <Button
        android:id="@+id/hold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hold"
        android:textSize="20sp"
        />

    <FrameLayout
        android:id="@+id/die2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#225511"

        android:layout_alignParentRight="true"/>

</LinearLayout>